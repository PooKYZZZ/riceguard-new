# =============================================================================
# RiceGuard Frontend Environment Configuration
# =============================================================================
# Copy this file to .env and update the API URL if needed

# =============================================================================
# API Configuration
# =============================================================================
# Backend API URL - update this to match your backend server
# For local development: http://127.0.0.1:8000/api/v1
# For production: https://your-domain.com/api/v1
REACT_APP_API_URL=http://127.0.0.1:8000/api/v1

# =============================================================================
# Development Configuration
# =============================================================================
# Enable/disable debug mode in development
REACT_APP_DEBUG=true

# Application version (for cache busting and debugging)
REACT_APP_VERSION=1.0.0

# Environment name
REACT_APP_ENVIRONMENT=development

# =============================================================================
# Feature Flags
# =============================================================================
# Enable experimental features
REACT_APP_ENABLE_EXPERIMENTAL_FEATURES=false

# Enable analytics tracking (for production)
REACT_APP_ENABLE_ANALYTICS=false

# =============================================================================
# UI Configuration
# =============================================================================
# Application title
REACT_APP_TITLE=RiceGuard - Rice Leaf Disease Detection

# Default theme
REACT_APP_DEFAULT_THEME=light

# Enable dark mode
REACT_APP_ENABLE_DARK_MODE=true

# =============================================================================
# Performance Configuration
# =============================================================================
# Enable service worker for caching
REACT_APP_ENABLE_SERVICE_WORKER=false

# Enable lazy loading for components
REACT_APP_ENABLE_LAZY_LOADING=true

# =============================================================================
# Mobile App Configuration (for Expo builds)
# =============================================================================
# Mobile API URL - use your PC's IP address for mobile development
# IMPORTANT: Update this to your PC's LAN IP address (not localhost/127.0.0.1)
# Format: http://YOUR_PC_IP:8000/api/v1
# Example: http://192.168.1.100:8000/api/v1
#
# To find your PC's IP:
# - Windows: ipconfig in Command Prompt
# - macOS/Linux: ifconfig or ip addr in Terminal
#
# Set this in terminal before running Expo:
# PowerShell: $env:EXPO_PUBLIC_API_BASE_URL="http://YOUR_PC_IP:8000/api/v1"
# bash/zsh: export EXPO_PUBLIC_API_BASE_URL="http://YOUR_PC_IP:8000/api/v1"
EXPO_PUBLIC_API_BASE_URL=http://YOUR_PC_IP:8000/api/v1

# =============================================================================
# Logging Configuration
# =============================================================================
# Enable detailed logging in development
REACT_APP_ENABLE_VERBOSE_LOGGING=true

# Log level (error, warn, info, debug)
REACT_APP_LOG_LEVEL=debug

# =============================================================================
# Third-party Service Configuration
# =============================================================================
# Google Analytics ID (for production)
REACT_APP_GA_ID=

# Sentry DSN for error tracking (for production)
REACT_APP_SENTRY_DSN=

# =============================================================================
# Build Configuration
# =============================================================================
# Source map generation (set to false in production)
GENERATE_SOURCEMAP=true

# Bundle analyzer (for development)
REACT_APP_BUNDLE_ANALYZER=false