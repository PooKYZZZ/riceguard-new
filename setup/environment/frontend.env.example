# RiceGuard Frontend Environment Configuration
# Copy this file to frontend/.env and update with your values

# API Configuration
REACT_APP_API_URL=http://127.0.0.1:8000/api/v1
REACT_APP_UPLOAD_URL=http://127.0.0.1:8000/uploads

# Application Settings
REACT_APP_APP_NAME=RiceGuard
REACT_APP_VERSION=1.0.0

# File Upload Settings
REACT_APP_MAX_FILE_SIZE=8388608
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg

# Feature Flags
REACT_APP_ENABLE_DEBUG=True
REACT_APP_ENABLE_ANALYTICS=False

# UI Settings
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_THEME=light